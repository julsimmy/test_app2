<h1>Books</h1>

<%= link_to 'Add Book', new_book_path %>

<table>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
            <%= book.title %>
            <%= link_to("Show Details", book_path(book)) %>
            <%= link_to("Update", edit_book_path(book)) %>
            <%= link_to("Delete", delete_book_path(book)) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
